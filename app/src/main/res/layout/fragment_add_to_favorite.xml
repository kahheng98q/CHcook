<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KahHeng.EndUser.AddToFavorite">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />
        <ProgressBar
            android:id="@+id/progressBarFav"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/favoriteRecycleView"
            app:layout_constraintEnd_toEndOf="@+id/favoriteRecycleView"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/favoriteRecycleView"
            app:layout_constraintTop_toTopOf="@+id/favoriteRecycleView"
            app:layout_constraintVertical_bias="0.288" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>